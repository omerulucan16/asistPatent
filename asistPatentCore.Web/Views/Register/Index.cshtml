@model asistPatentCore.ViewModel.RegisterViewModel

@{
    //IDefaultValuesService _defaultValuesService = new DefaultValuesService();
    ViewBag.title = "Asist Patent | Kayıt Ol";

    Layout = "~/Views/Shared/_LayoutLoginRegister.cshtml";
}

    <div class="card">
        <div class="card-block">

            <div class="account-box">

                <div class="card-box p-5">
                    <h2 class="text-uppercase text-center pb-4">
                        <a href="~/giris" class="text-success">
                            <span><img src="assets/images/logo.png" class="login-logo" alt="Asist Patent"></span>
                        </a>
                    </h2>


                    @if (!Model.isRegistered)
                    {
                        @using (Html.BeginForm("Index", "Register", FormMethod.Post, new { @class = "form-horizontal" }))
                        {
                            <div class="form-group row m-b-20">
                                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                    <label for="username">Ad</label>
                                    @Html.TextBoxFor(m => m.userName, new { @class = "form-control", @placeholder = "Hasan", @required = "required" })
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                    <label for="username">Soyad</label>
                                    @Html.TextBoxFor(m => m.userSurname, new { @class = "form-control", @placeholder = "Alakuş", @required = "required" })
                                </div>
                            </div>
                            <div class="form-group row m-b-20">
                                <div class="col-12">
                                    <label for="emailaddress">Telefon Numarası</label>
                                    @Html.TextBoxFor(m => m.userPhoneNumber, new { @class = "form-control", @placeholder = "5071235678", @required = "required" })
                                </div>
                            </div>
                            <div class="form-group row m-b-20">
                                <div class="col-12">
                                    <label for="emailaddress">Email adres</label>
                                    @Html.TextBoxFor(m => m.userEmailAdress, new { @class = "form-control", @placeholder = "test@asistpatent.com.tr", @type = "email", @required = "required" })
                                </div>
                            </div>

                            <div class="form-group row m-b-20">
                                <div class="col-lg-6 col-md-6  col-sm-6 col-xs-12">
                                    <label for="password">Parola</label>
                                    @Html.TextBoxFor(m => m.userPassword, new { @class = "form-control", @placeholder = "Parola", @type = "password", @required = "required" })
                                </div>
                                <div class="col-lg-6 col-md-6  col-sm-6 col-xs-12">
                                    <label for="password">Parola doğrula</label>
                                    @Html.TextBoxFor(m => m.userRePassword, new { @class = "form-control", @placeholder = "Parola doğrula", @type = "password", @required = "required" })
                                </div>
                            </div>

                            <div class="form-group row m-b-20">
                                <div class="col-12">

                                    <div class="checkbox checkbox-custom">
                                        @Html.CheckBoxFor(m => m.termscondition, new { @class = "form-control", @id = "remember" })

                                        <label for="remember">
                                            <a href="#custom-modal" class="text-custom" data-animation="door" data-plugin="custommodal" data-overlayspeed="100" data-overlaycolor="#36404a">Üyelik sözleşmesini </a> kabul ediyorum.
                                        </label>
                                    </div>

                                </div>
                            </div>

                            <div class="form-group row text-center m-t-10">
                                <div class="col-12">
                                    <button class="btn btn-block btn-custom btn-custom-asist waves-effect waves-light" type="submit">Kayıt ol</button>
                                </div>
                            </div>
                        }


                        <div class="row m-t-50">
                            <div class="col-sm-12 text-center">
                                <p class="text-muted">Hesabınız var mı ?   <a href="~/giris" class="text-dark m-l-5"><b>Giriş yap</b></a></p>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="card-box ">
                            <div class="text-center m-b-20">
                                <div class="m-b-20">
                                    <div class="checkmark">
                                        <svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 161.2 161.2" enable-background="new 0 0 161.2 161.2" xml:space="preserve">
                                        <path class="path" fill="none" stroke="#32c861" stroke-miterlimit="10" d="M425.9,52.1L425.9,52.1c-2.2-2.6-6-2.6-8.3-0.1l-42.7,46.2l-14.3-16.4
                                                        c-2.3-2.7-6.2-2.7-8.6-0.1c-1.9,2.1-2,5.6-0.1,7.7l17.6,20.3c0.2,0.3,0.4,0.6,0.6,0.9c1.8,2,4.4,2.5,6.6,1.4c0.7-0.3,1.4-0.8,2-1.5
                                                        c0.3-0.3,0.5-0.6,0.7-0.9l46.3-50.1C427.7,57.5,427.7,54.2,425.9,52.1z"></path>
                                        <circle class="path" fill="none" stroke="#32c861" stroke-width="4" stroke-miterlimit="10" cx="80.6" cy="80.6" r="62.1"></circle>
                                        <polyline class="path" fill="none" stroke="#32c861" stroke-width="6" stroke-linecap="round" stroke-miterlimit="10" points="113,52.8
                                                        74.1,108.4 48.2,86.4 "></polyline>

                                        <circle class="spin" fill="none" stroke="#32c861" stroke-width="4" stroke-miterlimit="10" stroke-dasharray="12.2175,12.2175" cx="80.6" cy="80.6" r="73.9"></circle>

                                                </svg>

                                    </div>
                                </div>

                                <h4>Başarıyla kayıt oldunuz ! </h4>

                                <p class="text-muted font-14 m-t-10"> Kayıt işlemlerini tamamlamak için posta hesabınıza gelen maili açınız. Eğer bir mail almadıysanız tekrar göndermek için lütfen <a href="~/yeniden-kayit-mail-gonder/@Model.userId" class="text-dark m-r-5"><b>tıklayınız.</b></a></p>
                                <div class="row m-t-50">
                                    <div class="col-sm-12 text-center">
                                        <p class="text-muted">Giriş yapmak için <a href="~/giris" class="text-dark m-l-5"><b>tıklayınız.</b></a></p>
                                    </div>
                                </div>
                            </div>

                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
    <div id="custom-modal" class="modal-demo">
        <button type="button" class="close" onclick="Custombox.close();">
            <span>&times;</span><span class="sr-only">Close</span>
        </button>
        <h4 class="custom-modal-title">Üyelik Sözleşmesi</h4>
        <div class="custom-modal-text">
            @Html.Raw(Model.termsconditionMessage)
        </div>
    </div>