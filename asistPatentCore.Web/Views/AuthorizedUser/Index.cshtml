@using asistPatentCore.Model.Enums
@model asistPatentCore.ViewModel.UsersListViewModel
@{
    ViewBag.title = "Asist Patent | Yetkililer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Start Page content -->
<div class="content">
    <div class="container-fluid">

        <div class="row">
            
            <div class="col-12">

                <div class="card-box">
                    <div class="form-group row">
                        <div class="col-12">
                            <div class="form-group text-left m-b-0 pt-3">
                                <a href="~/hesabim/yetkililer/yeni" class="btn btn-custom-asist">Yeni Yetkili Ekle</a>
                            </div>
                        </div>
                    </div>
                    <div class="table-rep-plugin">
                        <div class="table-responsive" data-pattern="priority-columns">
                            <table id="tech-companies-1" class="table  table-striped">
                                <thead>
                                    <tr>
                                        <th>Ad </th>
                                        <th>Soyad</th>
                                        <th>Cep Telefonu </th>
                                        <th>E-mail Adresi</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model.userList)
                                    {

                                        <tr>
                                            <th>@item.userName</th>
                                            <td>@item.userSurname</td>
                                            <th>@item.userPhoneNumber</th>
                                            <td>@item.userEmailAdress</td>
                                            <td><a href="~/hesabim/yetkililer/@item.authId" class="btn btn-outline-success waves-light waves-effect">Detay</a></td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>

                </div>
            </div>
        </div>
        <!-- end row -->

    </div> <!-- container -->

</div> <!-- content -->