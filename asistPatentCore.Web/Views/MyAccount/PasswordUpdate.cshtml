
@model asistPatentCore.ViewModel.MyAccountViewModel
@{
    ViewBag.title = "Asist Patent | Şifremi Değiştir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card-box">
                    <h4 class="m-t-0 header-title">
                        Şifremi Değiştir
                    </h4>


                    <div class="row">
                        <div class="col-12">
                            <div class="p-20">
                                @using (Html.BeginForm("PasswordUpdate", "MyAccount", FormMethod.Post))
                                {
                                    <div class="form-group row">
                                        <label class="col-lg-2 col-md-2 col-sm-12 col-xs-12 col-form-label">Şuanki Parola</label>
                                        <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12">
                                            @Html.TextBoxFor(m => m.userActivePassword, new { @class = "form-control",@type="password", @required = "required" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-2 col-md-2 col-sm-12 col-xs-12 col-form-label" for="example-email">Yeni Parola</label>
                                        <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12">
                                            @Html.TextBoxFor(m => m.userPassword, new { @class = "form-control", @type = "password", @required = "required" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-2 col-md-2 col-sm-12 col-xs-12 col-form-label">Yeni Parola Onayla</label>
                                        <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12">
                                            @Html.TextBoxFor(m => m.userRePassword, new { @class = "form-control", @type = "password", @required = "required" })
                                        </div>
                                    </div>

                                   


                                    <button class="btn float-right btn-custom-asist " type="submit">Parolamı Güncelle</button>

                                }
                            </div>
                        </div>

                    </div>
                    <!-- end row -->

                </div> <!-- end card-box -->
            </div><!-- end col -->
        </div>
        <!-- end row -->










    </div> <!-- container -->

</div>
