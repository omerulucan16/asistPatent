@model asistPatentCore.ViewModel.UsersViewModel
@{
    ViewBag.title = "Asist Patent | Yetkili kişiler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card-box">
                    <h4 class="m-t-0 header-title">
                        Yeni Yetkili oluştur
                    </h4>


                    <div class="row">
                        <div class="col-12">
                            <div class="p-20">
                                @using (Html.BeginForm("Detail", "AuthorizedUser", FormMethod.Post))
                                {

                                    <div class="form-group row">
                                        <label class="col-lg-2 col-md-2 col-sm-12 col-xs-12 col-form-label">Ad</label>
                                        <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12">
                                            @Html.TextBoxFor(m => m.userName, new { @class = "form-control", @required = "required" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-2 col-md-2 col-sm-12 col-xs-12 col-form-label" for="example-email">Soyad</label>
                                        <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12">
                                            @Html.TextBoxFor(m => m.userSurname, new { @class = "form-control", @required = "required" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-2 col-md-2 col-sm-12 col-xs-12 col-form-label" for="example-email">Telefon numarası</label>
                                        <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12">
                                            @Html.TextBoxFor(m => m.userPhoneNumber, new { @class = "form-control", @required = "required" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-2 col-md-2 col-sm-12 col-xs-12 col-form-label" for="example-email">E-Mail Adresi</label>
                                        <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12">
                                            @Html.TextBoxFor(m => m.userEmailAdress, new { @class = "form-control", @required = "required" })
                                        </div>
                                    </div>

                                    <button class="btn float-right btn-custom-asist " type="submit">Güncelle</button>
                                    <a href="~/hesabim/yetkili-sil/@Model.authId" class="btn float-right btn-danger m-r-10"> <i class="fa fa-user-times"></i> Sil</a>

                                }
                            </div>
                        </div>

                    </div>
                    <!-- end row -->

                </div> <!-- end card-box -->
            </div><!-- end col -->
        </div>
    </div><!-- end col -->
</div>
<!-- end row -->
